#!/usr/bin/ruby
# --------------------------------------------------
# Rules
# --------------------------------------------------
watch( '.*' ) { mainloop }

# --------------------------------------------------
# Signal Handling
# --------------------------------------------------
Signal.trap('QUIT') { mainloop }        # Ctrl-\
Signal.trap('INT' ) { abort("\n") } # Ctrl-C

# --------------------------------------------------
# Helpers
# --------------------------------------------------
def mainloop 
  puts %x[clear]
  puts %x[rspec -c spec]
end

